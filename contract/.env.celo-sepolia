# Celo Sepolia Testnet Configuration
# Copy this to .env when deploying to Celo Sepolia Testnet

# Network Configuration
NETWORK_NAME=celoSepolia
CHAIN_ID=11142220
# Recommended: Use dRPC public endpoint or get Alchemy API key
CELO_SEPOLIA_RPC_URL=https://celo-sepolia.drpc.org
# Alternative: CELO_SEPOLIA_RPC_URL=https://celo-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Deployer Configuration
DEPLOYER_PRIVATE_KEY=0x_your_deployer_private_key_here

# Contract Configuration (set after deployment)
CONTRACT_ADDRESS=

# Server Configuration
SERVER_SIGNER_ADDRESS=0x_your_server_signer_address_here
FEE_RECIPIENT_ADDRESS=0x_your_fee_recipient_address_here

# Explorer (Blockscout)
CELO_EXPLORER_API_KEY=not-needed

# Gas Reporting
REPORT_GAS=false
